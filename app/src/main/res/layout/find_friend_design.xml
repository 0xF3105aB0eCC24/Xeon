<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    >

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:layout_marginTop="15dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="user_name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_notification"
            android:gravity="center_horizontal">

        </TextView>

        <Button
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_notification"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="90dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:text="Accept Friend Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13dp">

        </Button>

        <Button
            android:id="@+id/request_decline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_accept_btn"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="90dp"
            android:background="@android:color/holo_blue_light"
            android:padding="5dp"
            android:text="Cancel Friend Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13dp">

        </Button>


    </RelativeLayout>



</androidx.cardview.widget.CardView>